#!/bin/bash

. ~/dotfiles/bash/colors

~/dotfiles/bin/banner

echo -ne "`fgcolor2 $c_dk`"
echo `uptime -p 2>/dev/null || uptime`
echo
echo -ne "`resetcolor2`"

echo -ne "`fgcolor2 $c_lt`"
w -hsi 2>/dev/null || w -hi
echo -ne "`resetcolor2`"
echo

echo -ne `fgcolor2 $c_md`
IDENTS=`ssh-add -L`
if [[ $IDENTS =~ 'no identities' ]]; then
  echo "$IDENTS"
else
  echo "$IDENTS" | cut -d' '  -f 3 | sed "s|$HOME|~|g"
fi
echo

echo -ne `resetcolor2`
~/dotfiles/bin/sysinfo
~/dotfiles/bin/memusage

