#!/bin/bash

tmux -2 new -s rainmonster -d
tmux send-keys 'cd ~/projects/navi2 ; ./server' 'C-m'
tmux split-window -h -p 50 bash
tmux send-keys 'cd ~/projects/ganon ; foreman start' 'C-m'
tmux split-window -v -p 50 bash
tmux select-pane -t 0
tmux split-window -v -p 50 bash
tmux send-keys 'cd ~/projects/hyrule ; ./server' 'C-m'
tmux attach
